{
	"name": "g6-stack-app-tools",
	"displayName": "G6 Stack App Tools",
	"description": "A set of tools to create new screens, components, and routes for your g6 stack app",
	"version": "1.0.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/bshearrer/g6-stack-app-tools"
	},
	"publisher": "bshearrer",
	"engines": {
		"vscode": "^1.83.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.createTRPCRoute",
				"title": "G6 Stack - Create tRPC Route"
			},
			{
				"command": "extension.createNextPage",
				"title": "G6 Stack - Create Next Page"
			},
			{
				"command": "extension.createUIComponent",
				"title": "G6 Stack - Create UI Component"
			}
		]
	},
	"icon": "images/icon.png",
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"release:patch": "npm version patch && git push && git push --tags && npm run publish",
		"release:minor": "npm version minor && git push && git push --tags && npm run publish",
		"release:major": "npm version major && git push && git push --tags && npm run publish"	
	},
	"devDependencies": {
		"@types/mocha": "^10.0.2",
		"@types/node": "^18.18.5",
		"@types/vscode": "^1.83.0",
		"@typescript-eslint/eslint-plugin": "^6.7.3",
		"@typescript-eslint/parser": "^6.7.3",
		"@vscode/test-electron": "^2.3.4",
		"eslint": "^8.50.0",
		"glob": "^10.3.3",
		"mocha": "^10.2.0",
		"ts-loader": "^9.4.4",
		"typescript": "^5.2.2",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"prettier": "^3.0.3"
	}
}
